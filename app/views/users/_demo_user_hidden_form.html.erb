<form action="<%= session_url %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input
     id="user_username"
     name="user[username]"
     value="Demo User"
     type="hidden">

  <input
     id="user_password"
     name="user[password]"
     value="password"
     type="hidden">

  (or <input type="submit" value="Test with the Demo Account">)
</form>